<div class=".col-xs-12 .col-sm-6 .col-md-8">
  <div class="row">
    <div class ="errors">
     
      <%= form_for @seller, {url:"/seller_authentications", method:"post"} do |sellr| %>
        <% if @seller.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@seller.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
            <% @seller.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="actions">
          <div class="form-group">
          <h3><%= sellr.label :email %></h3>
          <%= sellr.text_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <h3><%= sellr.label :password %></h3>
            <%= sellr.password_field :password, class: 'form-control' %>
          </div>
          </br>

          <div>
          <%= sellr.submit "Log In", class: 'btn btn-default font' %>
          </div>
      </div>
      <% end %>

      </div>
    </div>
</div>