          <div class="form-group">
            <%= sellr.label :password %>
            <%= sellr.password_field :password, class: 'form-control' %>
          </div>

          <div>
          <%= sellr.submit "Log In", class: 'btn btn-default' %>
          </div>
      </div>
      <% end %>

      </div>
    </div>
</div>