
<h1>Shopping Cart</h1>
<table>
	<% @order.line_items.each do |item| %>
	<tr>
		<td><%= item.product_quantity_ordered %> &times; <%= item.product.product_name %></td>
		<!-- <li><%# item.product.product_name %></li> -->
		<td><%= item.product.product_description %></td>
		<td><span class="price"><%= number_to_currency(item.product.product_price) %></span></td>
		</br>
	</tr>
	<% end %>
</table>
