<div class="container">

	<h2> Customer Log in: </h2>

	<div>
    <div class="row">
    	<%= form_for @customer, {url:"/authentications", method:"post"} do |custr| %>
      <div class="large-4 columns">
      	<%= custr.label :customer_email, "Customer Email", placeholder: "customer_email" %>
		<%= custr.text_field :customer_email %>
      </div>

      <div class="large-4 columns">
      <%= custr.label :customer_password, "Customer Password", placeholder: "customer_password" %>
	  <%= custr.password_field :customer_password %>
	  </div>
	  </br>

	  <%= custr.submit "Log In", class: "button [tiny small large]" %>

	  <%end%>
	  </div>
	  </div>
