<h1><%= @cause.cause_name %></h1></br>

<p id="notice"><%= notice %></p>

<%= link_to 'Back', causes_path %>

<div class="cause_container">
	<% @products.each do |p| %>
		<div class= "product_row">
		  <div class="col-xs-6 col-md-3">
		    <div class="product_img">
		    	<div class="border">
				<h4><span class="font"><%= p.product_name %></span></h4></br>
				<p><span class="font"><%= p.product_description %></span></p></br>
				<span class="price"><%= number_to_currency(p.product_price) %></span></br>
				<%= link_to "show product", store_product_url(p.store.id, p.id) %>
				</div>
			</div>
		  </div>
		</div>
	<% end %>
</div>

