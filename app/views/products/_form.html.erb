          </div>


          <div class="form-group">
          <h3><%= f.label :product_description %></h3>
          <%= f.text_area :product_description, rows: 8, id:"product_description", class: 'form-control' %>
          <%= @product.errors[:product_description].join(", ") %>
          </div>


          <div class="form-group">
          <h3><%= f.label :product_price %></h3>
          <%= f.text_field :product_price, id:"product_price", class: 'form-control' %>
          <%= @product.errors[:product_price].join(", ") %>
          </div>

